<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <!-- <link rel="stylesheet" href="/stylesheets/style.css"> -->
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class = "bg-zinc-900  text-white">
    <div class="text-zinc-400 ml-5 mt-10">
        <a href="/">Return To Home Page</a>
    </div>
    <h1 class="text-3xl ml-5 mt-10 tracking-tighter">All Users</h1>
    <div class="w-full ml-5 mt-10 h-full flex flex-wrap gap-5">
        <% users.forEach(function(user) { %>
            <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                <div class="w-full h-52 bg-red-500 rounded-lg">
                    <img class="w-full h-full object-cover overflow-hidden" src="<%= user.image %>" alt="">
                </div>
                <h3 class="text-2xl mt-3 tracking-tighter"><%= user.name %></h3>
                <h5 class="text-zinc-500"><%= user.email %></h5>
                <div class="flex gap-3 mt-10">
                    <a href="/edit" class="text-zinc-600">Edit User</a>
                    <a href="/delete/<%= user._id%>" class="text-red-500" >Delete User</a>

                </div>
            </div>
        <% }) %>
    </div>
  </body>
</html>
